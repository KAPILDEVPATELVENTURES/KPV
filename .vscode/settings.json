{
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.fixAll.eslint": "explicit"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.experimental.useFlatConfig": true,
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/.next": true,
        "**/node_modules": true,
        "**/out": true
    }
}